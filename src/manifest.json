{
	"manifest_version" : 2,
	
	"name" : "mangodaily",
	"description" : "我不想登入蘋果新聞網",
	"version" : "1.0",
	
	"browser_action" : {
		"default_title" : "mangodaily",
		"default_icon" : "icon.png"	
	},
	"icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
	},
	"background":{
        "scripts": ["jquery-3.4.0.min.js", "mango.js"]
    },
	"content_scripts" : [
		{
		"matches" : ["*://*.appledaily.com/*"],
		"js" : ["jquery-3.4.0.min.js", "mango.js"]
		}
	],
	"permissions" : ["activeTab"]
}